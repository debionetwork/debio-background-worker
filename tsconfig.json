{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@common/*": ["src/common/*"],
      "@indexer/*": ["src/indexer/*"],
      "@listeners/*": ["src/listeners/*"],
      "@schedulers/*": ["src/schedulers/*"]
    }
  }
}
